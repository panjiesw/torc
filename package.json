{
	"name": "torc",
	"version": "0.1.0-dev.0",
	"description": "A set of React Toolbox compatible components intergrated with React Router capabilities",
	"main": "lib/index",
	"types": "lib/index.d.ts",
	"license": "MIT",
	"homepage": "https://github.com/panjiesw/torc",
	"files": [
		"lib"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/panjiesw/torc.git"
	},
	"author": {
		"name": "Panjie Setiawan Wicaksono",
		"email": "panjie@panjiesw.com",
		"url": "https://blog.panjiesw.com"
	},
	"bugs": {
		"url": "https://github.com/panjiesw/torc/issues"
	},
	"keywords": [
		"components",
		"material design",
		"react",
		"react-component",
		"react-router",
		"react-toolbox",
		"toolkit"
	],
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"clean": "npm run clean:cache && npm run clean:dist",
		"clean:cache": "del-cli .awcache",
		"clean:lib": "del-cli lib",
		"coverage": "npm run coverage:remap && npm run coverage:report",
		"coverage:remap": "remap-istanbul -i coverage/coverage.json -o coverage/coverage-remapped.json -t json -e node_modules",
		"coverage:report": "node tools/coverage.js",
		"lint": "npm run lint:ts",
		"lint:css": "stylelint ./src/**/*.css",
		"lint:ts": "tslint -e './node_modules/**/*' -e './lib/**/*' -e './**/*.d.ts' './**/*.{ts,tsx}'",
		"test": "cross-env NODE_ENV=test COVER=true karma start",
		"watch": "cross-env NODE_ENV=test karma start --auto-watch --no-single-run",
		"prebuild": "npm run lint && npm run clean:lib",
		"posttest": "npm run coverage"
	},
	"devDependencies": {
		"@types/classnames": "^0.0.32",
		"@types/enzyme": "^2.7.1",
		"@types/jasmine": "^2.5.40",
		"@types/jasmine-expect": "^2.0.29",
		"@types/karma": "^0.13.33",
		"@types/node": "^6.0.58",
		"@types/react": "^0.0.0",
		"@types/react-dom": "^0.14.20",
		"@types/react-router": "^2.0.41",
		"@types/webpack": "^2.1.0",
		"awesome-typescript-loader": "^3.0.0-beta.17",
		"cross-env": "^3.1.4",
		"css-loader": "^0.26.1",
		"del-cli": "^0.2.1",
		"enzyme": "^2.7.0",
		"istanbul": "^0.4.5",
		"jasmine-core": "^2.5.2",
		"jasmine-enzyme": "^2.0.0",
		"jasmine-expect": "^3.0.1",
		"karma": "^1.3.0",
		"karma-chrome-launcher": "^2.0.0",
		"karma-cli": "^1.0.1",
		"karma-coverage": "^1.1.1",
		"karma-jasmine": "^1.1.0",
		"karma-phantomjs-launcher": "^1.0.2",
		"karma-sourcemap-loader": "^0.3.7",
		"karma-sourcemap-writer": "^0.1.2",
		"karma-spec-reporter": "^0.0.26",
		"karma-webpack": "^1.8.1",
		"null-loader": "^0.1.1",
		"phantomjs-prebuilt": "^2.1.14",
		"postcss-cssnext": "^2.9.0",
		"postcss-each": "^0.9.3",
		"postcss-import": "^9.0.0",
		"postcss-loader": "^1.2.1",
		"postcss-mixins": "^5.4.1",
		"postcss-reporter": "^3.0.0",
		"react": "^15.4.2",
		"react-addons-test-utils": "^15.4.2",
		"react-dom": "^15.4.2",
		"react-router": "^3.0.0",
		"react-toolbox": "^2.0.0-beta.4",
		"remap-istanbul": "^0.8.4",
		"style-loader": "^0.13.1",
		"stylelint": "^7.7.1",
		"stylelint-config-standard": "^15.0.1",
		"tslint": "^4.3.1",
		"typed-css-modules": "^0.1.13",
		"typescript": "^2.1.4",
		"webpack": "beta",
		"webpack-dev-server": "beta"
	},
